<h2> Recipes search results</h2>

<form method="get" action="/recipes/search">
    <button type="submit">Back to Search</button>
</form>
<table class="table table-bordered table-striped">
    <thead>
    </thead>
    <tbody>
        <% for( let index = 0; index < recipes.length; index++ ) { %>
            <% let recipe = recipes[index] %> 
            <tr>
                <td><%= recipe.recipe.label %></td>
                <td><img src=<%= recipe.recipe.image %>  alt=<%= recipe.recipe.label %>></td>
                <td><%= recipe.recipe.label %></td>
                <td><%= recipe.recipe.uri %></td>
                <td> 
                    <form method="POST" action="/recipes/new">
                    <input name="recipeUri" type="text" value=<%= recipe.recipe.uri %> hidden >
                    <input name="dishName" type="text" value=<%= recipe.recipe.label %> hidden >
                    <input name="url" type="text" value=<%= recipe.recipe.url %> hidden >
                    <input name="recipeTime" type="text" value=<%= recipe.recipe.totalTime %> hidden >
                    <input name="recipeCalories" type="text" value=<%= recipe.recipe.calories %> hidden >
                    <input name="ingredients" type="text" value=<%= recipe.recipe.ingredientLines[0] %> hidden >
                    <input name="dietLabels" type="text" value=<%= recipe.recipe.dietLabels[0] %> hidden >
                    <input name="totalNutrients" type="text" value=<%= recipe.recipe.totalNutrients %> hidden >
                    <input name="mealType" type="text" value=<%= recipe.recipe.mealType[0] %> hidden >
                    <input name="cuisine" type="text" value=<%= recipe.recipe.cuisineType %> hidden >
                    <input name="userId" type="text" value=<%= currentUser.id %> hidden >
                    <button class="btn btn-primary" type="submit"> Add Recipe</button>
                    </form>
                </td>
            </tr>

        <% } %>
    </tbody>
</table>
