<h2> Recipes search results</h2>

<table class="table table-bordered table-striped">
    <thead>
    </thead>
    <tbody>
        <% for( let index = 0; index < recipes.length; index++ ) { %>
            <% let recipe = recipes[index] %> 
            <tr>
                <th>
                    <a type="button" href=<%= `/details/${recipe.recipe.uri}` %> class="btn btn-primary">
                        <%= `See details for ID: ${recipe.recipe.label}` %>
                    </a>
                </th>
                <td><%= recipe.recipe.label %></td>
                <td><img src=<%= recipe.recipe.image %>  alt=<%= recipe.recipe.label %>></td>
                <td><%= recipe.recipe.label %></td>
                <td><%= recipe.recipe.uri %></td>
                <td><%= recipe.recipe.ingredientLines[0] %></td>
                <td> 
                    <form method="POST" action="/recipes">
                    <input name="recipeUri" type="text" value=<%= recipe.recipe.uri %> hidden >
                    <input name="dishName" type="text" value=<%= recipe.recipe.label %> hidden >
                    <input name="recipeTime" type="text" value=<%= recipe.recipe.totalTime %> hidden >
                    <input name="recipeCalories" type="text" value=<%= recipe.recipe.calories %> hidden > 
                    <input name="userId" type="text" value=<%= currentUser.id %> hidden >
                    <button class="btn btn-primary" type="submit"> Add Recipe</button>
                    </form>
                </td>
            </tr>

        <% } %>
    </tbody>
</table>
